<%= render 'layouts/navbar'%>

<%= render 'layouts/modale'%>

<div class="wrap-list">
  <div id='liste'>
    <%= image_tag("photos/purple(2).jpg", class: "img-bg") %>
    
    <% current_user.places.each do |fiche| %>
        <div id="list_show">
          <i class="fa fa-location-arrow"></i>
            <h3>Nom de la boutique :<%= fiche.name %> </h3>
            <hr>
            <i>Adresse : <%= fiche.address %> </i>
            <p>Description : <%= fiche.description %> </p>
            <!-- <b>Prix moyen : <%= fiche.average_price %></b> -->
        </div>
      <%end%>

    </div>
  </div>
    
</div>